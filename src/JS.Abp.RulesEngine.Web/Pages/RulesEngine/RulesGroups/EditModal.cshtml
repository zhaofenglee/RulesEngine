@page
@using Microsoft.AspNetCore.Mvc.Localization
@using JS.Abp.RulesEngine.Localization
@using JS.Abp.RulesEngine.Web.Pages.RulesEngine.RulesGroups
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using JS.Abp.RulesEngine.RulesGroups;
@using System.Globalization
@inject IHtmlLocalizer<RulesEngineResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/RulesEngine/RulesGroups/EditModal" autocomplete="off">
    <abp-modal id="RulesGroupEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>

                    <abp-input asp-for="Id" />
                    <abp-input asp-for="RulesGroup.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    

            <abp-input asp-for="RulesGroup.GroupName"   />


            <abp-select asp-for="RulesGroup.OperatorType"   />


            <abp-input asp-for="RulesGroup.Description" text-area  />

                    
                

        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">

        </abp-modal-footer>
    </abp-modal>
</form>
